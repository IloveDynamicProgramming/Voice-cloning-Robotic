        <div class="row">
            <div class="col-md-1">
                <%= user.id %>
            </div>
            <div class="col-md-3">
                <%= user.firstname %>
            </div>
            <div class="col-md-3">
                <%= user.lastname %> 
            </div>
            <div class="col-md-3">
                <%= link_to user.email %>
            </div>
            <div class="col-md-1">
                <%=f.submit "Delete"%>
