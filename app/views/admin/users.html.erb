    <li class="list-group-item" style="background-color: #428bca; border-color: #357ebd;; color: #fff;">
        <div class="row">
            <div class="col-md-1">
                <b>ID</b>
            </div>
            <div class="col-md-3">
                <b>User Firstname</b>
            </div>
            <div class="col-md-3">
                <b>User Lastname</b>
            </div>
            <div class="col-md-3">
                <b>Email</b>
            </div>
            <div class="col-md-1">
                <b>Delete</b>
            </div>
        </div>
    </li>
    <% @users.each do |user| %>
    <%= form_with model: @user, url: '/admin/users/delete' do |f| %>
